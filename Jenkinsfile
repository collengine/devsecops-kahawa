pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sleep 2
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing...'
                sleep 3
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sleep 1
            }
        }
    }
}
